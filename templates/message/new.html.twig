{% extends 'base.html.twig' %}

{% block title %}New Message{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="text-center my-5">Új üzenet küldése</h1>

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success" role="alert">
            {{ message }}
            </div>
        
        {% endfor %}

        {% for message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger" role="alert">
            {{ message }}
            </div>
        
        {% endfor %}
    </div>

    {{ include('message/_form.html.twig') }}

    {# <button class="btn btn-primary"><a href="{{ path('app_message_index') }}" class="text-white">back to list</a></button> #}
    
{% endblock %}
